# FRA Document OCR & NER API Configuration
# Copy this file to .env and fill in your actual values

# Google Cloud Vision API
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/google-credentials.json

# Google Gemini AI API
GEMINI_API_KEY=your_gemini_api_key_here

# Server Configuration
HOST=127.0.0.1
PORT=8000
DEBUG=True

# CORS Settings (for production, specify allowed origins)
ALLOWED_ORIGINS=*

# File Processing Settings
MAX_FILE_SIZE_MB=10
MAX_TOTAL_SIZE_MB=50

# Results Storage (for production, use database)
STORAGE_TYPE=memory  # options: memory, file, database
STORAGE_PATH=./results  # only used if STORAGE_TYPE=file